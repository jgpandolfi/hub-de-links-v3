# =============================================================================
# .htaccess para Diretório Principal - Hub de Links José Guilherme Pandolfi
# Desenvolvido por Jota / José Guilherme Pandolfi - Agência m2a
# hub.agenciam2a.com.br
# Versão do .htaccess desenvolvida para hospedagem em Hostgator Brasil (PHP-FPM)
# =============================================================================

# Ativar mod_rewrite
RewriteEngine On

# =============================================================================
# SEGURANÇA - Headers de Proteção
# =============================================================================

# Prevenir acesso direto a arquivos sensíveis
<FilesMatch "\.(env|md|log|txt|bak|backup|old|sql|json|htaccess)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Bloquear acesso a arquivos do sistema
<FilesMatch "^(\.git|\.gitignore|composer\.(json|lock)|package(-lock)?\.json|README\.md)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Headers de segurança
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Ativar proteção XSS no navegador
    Header set X-XSS-Protection "1; mode=block"
    
    # Política de referrer restrita
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # HSTS (HTTP Strict Transport Security)
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Permissions Policy (substituindo Feature-Policy)
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
    
    # Content Security Policy otimizada para Hub de Links
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://www.googletagmanager.com https://www.google-analytics.com https://code.ionicframework.com https://www.clarity.ms; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://code.ionicframework.com; font-src 'self' https://fonts.gstatic.com https://code.ionicframework.com; img-src 'self' data: https:; connect-src 'self' https: wss:; manifest-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
</IfModule>

# =============================================================================
# REDIRECIONAMENTOS E HTTPS
# =============================================================================

# Forçar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirecionar www para non-www (ou vice-versa)
RewriteCond %{HTTP_HOST} ^www\.hub\.agenciam2a\.com\.br$ [NC]
RewriteRule ^(.*)$ https://hub.agenciam2a.com.br/$1 [R=301,L]

# =============================================================================
# PROTEÇÃO CONTRA BOTS MALICIOSOS E SPAM
# =============================================================================

# Bloquear bots maliciosos conhecidos
RewriteCond %{HTTP_USER_AGENT} (ahrefs|semrush|majestic|screaming|serpstat|spyfu) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (scan|spider|bot|crawler).*badbot [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (HTTrack|WebCopier|WebZIP|wget|curl|libwww) [NC]
RewriteCond %{REQUEST_URI} !^/robots\.txt$
RewriteRule ^(.*)$ - [F,L]

# Permitir apenas bots legítimos (Google, Bing, etc)
# Mas bloquear acesso ao backend via User-Agent
RewriteCond %{REQUEST_URI} ^/backend/
RewriteCond %{HTTP_USER_AGENT} (bot|crawler|spider|scraper) [NC]
RewriteRule ^(.*)$ - [F,L]

# =============================================================================
# COMPRESSÃO GZIP
# =============================================================================

<IfModule mod_deflate.c>
    # Compressão para tipos de arquivo
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# =============================================================================
# CACHE E PERFORMANCE
# =============================================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imagens WebP (cache longo)
    ExpiresByType image/webp "access plus 1 year"
    
    # Outras imagens
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS e JavaScript (cache médio)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fontes
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    
    # HTML (cache curto para atualizações rápidas)
    ExpiresByType text/html "access plus 1 hour"
    
    # JSON (sem cache)
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Headers de cache adicionais
<IfModule mod_headers.c>
    # Cache para recursos estáticos
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2|eot|ttf|otf)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache moderado para HTML
    <FilesMatch "\.(html)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # Sem cache para JSON e APIs
    <FilesMatch "\.(json|php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# =============================================================================
# CONFIGURAÇÕES DE MIME TYPES
# =============================================================================

<IfModule mod_mime.c>
    # Tipos de arquivo específicos
    AddType application/javascript .js
    AddType text/css .css
    AddType image/webp .webp
    AddType image/svg+xml .svg
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType font/ttf .ttf
    AddType font/otf .otf
    AddType application/json .json
    AddType application/xml .xml
    
    # Charset padrão
    AddDefaultCharset UTF-8
</IfModule>

# =============================================================================
# PROTEÇÃO CONTRA ATAQUES COMUNS
# =============================================================================

# Proteção contra SQL Injection e XSS na URL
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} (union|select|insert|update|delete|drop|create|alter|truncate) [NC,OR]
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|\.\.\%2F) [NC,OR]
RewriteCond %{QUERY_STRING} (localhost|127\.0\.0\.1|loopback) [NC]
RewriteRule ^(.*)$ - [F,L]

# Proteção contra tentativas de acesso a arquivos PHP diretamente (exceto index.php)
RewriteCond %{REQUEST_URI} !^/(backend|api)/
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} \.php$
RewriteCond %{REQUEST_URI} !^/index\.php$
RewriteRule ^(.*)$ - [F,L]

# =============================================================================
# REGRAS DE ACESSO ESPECÍFICAS DO PROJETO
# =============================================================================

# Permitir acesso aos arquivos do frontend
<Files "index.html">
    Order allow,deny
    Allow from all
</Files>

<Files "script.js">
    Order allow,deny
    Allow from all
</Files>

<Files "estilo.css">
    Order allow,deny
    Allow from all
</Files>

<Files "robots.txt">
    Order allow,deny
    Allow from all
</Files>

<Files "sitemap.xml">
    Order allow,deny
    Allow from all
</Files>

<Files "manifest.json">
    Order allow,deny
    Allow from all
</Files>

# Permitir acesso à pasta assets (imagens, fontes, etc)
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/assets/
    RewriteRule ^(.*)$ - [L]
</IfModule>

# =============================================================================
# BLOQUEIO DA PASTA BACKEND
# =============================================================================

# Bloquear acesso direto à pasta backend (exceto via API interna)
# O backend tem seu próprio .htaccess com regras específicas
RewriteCond %{REQUEST_URI} ^/backend/
RewriteCond %{HTTP_REFERER} !^https://hub\.agenciam2a\.com\.br
RewriteCond %{REQUEST_URI} !^/backend/api/
RewriteCond %{REQUEST_URI} !^/backend/painel/
RewriteRule ^(.*)$ - [F,L]

# =============================================================================
# EXCLUSÕES - NÃO INTERFERIR COM BACKEND
# =============================================================================

# O backend tem seu próprio .htaccess, não interferir
RewriteCond %{REQUEST_URI} !^/backend/

# =============================================================================
# PÁGINA PADRÃO
# =============================================================================

# Definir index.html como página padrão
DirectoryIndex index.html

# =============================================================================
# CONFIGURAÇÕES ADICIONAIS DE SEGURANÇA
# =============================================================================

# Desabilitar listagem de diretórios
Options -Indexes

# Prevenir acesso a arquivos ocultos (.htaccess, .git, etc)
<FilesMatch "^\.">
    Order deny,allow
    Deny from all
</FilesMatch>

# Desabilitar server signature
ServerSignature Off

# =============================================================================
# REGRAS PARA CRAWLERS E SEO
# =============================================================================

# Permitir acesso de crawlers legítimos ao frontend
# Google, Bing, Yandex, etc.
RewriteCond %{HTTP_USER_AGENT} (Googlebot|Bingbot|Slurp|DuckDuckBot|Baiduspider|YandexBot|facebot|ia_archiver) [NC]
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^(.*)$ - [L]

# =============================================================================
# FIM DO ARQUIVO .htaccess
# =============================================================================